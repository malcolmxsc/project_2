<%- include('../partials/header') %>

<div class="container">
  <h2>Add New Exercise Log</h2>

  <form action="/logs" method="POST">
    <div class="mb-3">
      <label for="exerciseType" class="form-label">Exercise Type:</label>
      <select class="form-select" id="exerciseType" name="exerciseType" required>
        <option value="" disabled selected>Select exercise type</option>
        <option value="Strength">Strength</option>
        <option value="Aerobic">Aerobic</option>
        <option value="Swimming">Swimming</option>
        <option value="Yoga">Yoga</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="exerciseTime" class="form-label">Exercise Time (minutes):</label>
      <input type="number" class="form-control" id="exerciseTime" name="exerciseTime" min="1" max="1440" required>
    </div>

    <div class="mb-3">
      <label for="date" class="form-label">Date:</label>
      <input type="date" class="form-control" id="date" name="date" required>
    </div>

    <div class="mb-3">
      <label for="exerciseNotes" class="form-label">Exercise Notes:</label>
      <textarea class="form-control" id="exerciseNotes" name="exerciseNotes" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Exercise Log</button>
  </form>
</div>

<%- include('../partials/footer') %>